<div class="container mt-5">
  <h1 class="mb-4">Pokemons</h1>

  <div class="row">
    <% @pokemons.each do |pokemon| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="<%= pokemon[:image_url] %>"
              class="card-img-top"
              alt="<%= pokemon[:name] %>"
          >

          <div class="card-body">
            <h5 class="card-title"><%= pokemon[:name].titleize %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
